                    input_html: { id:'rs-range-line2', class: 'rs-range-vertical pink', type: 'range', min: '0', max: '10', value: '0', onchange: 'rangeSlider2()'}%>
                </div>
                <div class="text-center p-2">
                    <%= @evaluation.questionnaire.question2 %>
                </div>
            </div>

            <div class="col-md-2">
