  ];

  charttot.data = [

    {
      choice: "Choix 1",
      part: val1,
      note: 1,
      "color": am4core.color('#ED6B80')
    },
    {
      choice: "Choix 2",
      part: val2,
      note: 1,
      "color": am4core.color('#CAD639')
    },
    {
      choice: "Choix 3",
      part: val3,
      note: 1,
